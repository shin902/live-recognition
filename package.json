{
  "name": "live-recognition",
  "version": "0.1.0",
  "description": "リアルタイム音声認識とLLM文章整形を組み合わせたmacOSデスクトップアプリケーション",
  "main": "dist/main/index.js",
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently \"pnpm run build:main --watch\" \"pnpm run build:renderer\" \"wait-on dist/main/index.js dist/renderer/index.html && electron .\"",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.30",
    "dotenv": "^16.3.1",
    "onnxruntime-web": "^1.23.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^2.1.4",
    "wait-on": "^7.0.1"
  }
}
